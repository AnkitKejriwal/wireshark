        systemId="EtherealThreePane1"
        uri="./graphics/ethereal-main.jpg" />
    <uri 
        name="chunk.xsl"
        uri="docbook-xsl-1.62.1/html/chunk.xsl" />
    <uri
        name="fo-docbook.xsl"
        uri="docbook-xsl-1.62.1/fo/docbook.xsl" />
	-->

  </group>

</catalog>